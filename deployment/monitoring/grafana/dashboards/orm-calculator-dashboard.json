{
  "dashboard": {
    "id": null,
    "title": "ORM Capital Calculator - Production Dashboard",
    "tags": ["orm-calculator", "production", "compliance"],
    "style": "dark",
    "timezone": "UTC",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "System Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"orm-calculator\"}",
            "legendFormat": "Service Status"
          },
          {
            "expr": "orm_calculator_uptime_seconds",
            "legendFormat": "Uptime (seconds)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(orm_calculator_http_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/sec",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(orm_calculator_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile"
          },
          {
            "expr": "histogram_quantile(0.95, rate(orm_calculator_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.99, rate(orm_calculator_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "99th percentile"
          }
        ],
        "yAxes": [
          {
            "label": "Seconds",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 18, "y": 0}
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(orm_calculator_http_requests_total{status=~\"4..\"}[5m])",
            "legendFormat": "4xx errors"
          },
          {
            "expr": "rate(orm_calculator_http_requests_total{status=~\"5..\"}[5m])",
            "legendFormat": "5xx errors"
          }
        ],
        "yAxes": [
          {
            "label": "Errors/sec",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 5,
        "title": "System Resources",
        "type": "graph",
        "targets": [
          {
            "expr": "orm_calculator_cpu_percent",
            "legendFormat": "CPU %"
          },
          {
            "expr": "orm_calculator_memory_percent",
            "legendFormat": "Memory %"
          },
          {
            "expr": "orm_calculator_disk_percent",
            "legendFormat": "Disk %"
          }
        ],
        "yAxes": [
          {
            "label": "Percentage",
            "min": 0,
            "max": 100
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 6,
        "title": "Database Metrics",
        "type": "graph",
        "targets": [
          {
            "expr": "orm_calculator_database_connected",
            "legendFormat": "DB Connected"
          },
          {
            "expr": "pg_stat_database_numbackends",
            "legendFormat": "Active Connections"
          },
          {
            "expr": "rate(pg_stat_database_xact_commit[5m])",
            "legendFormat": "Commits/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 7,
        "title": "Calculation Jobs",
        "type": "graph",
        "targets": [
          {
            "expr": "orm_calculator_job_queue_size",
            "legendFormat": "Queue Size"
          },
          {
            "expr": "rate(orm_calculator_job_completed_total[5m])",
            "legendFormat": "Completed/sec"
          },
          {
            "expr": "rate(orm_calculator_job_failed_total[5m])",
            "legendFormat": "Failed/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 8,
        "title": "Security Events",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(orm_calculator_auth_failures_total[5m])",
            "legendFormat": "Auth Failures/sec"
          },
          {
            "expr": "rate(orm_calculator_rate_limit_violations_total[5m])",
            "legendFormat": "Rate Limit Violations/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 9,
        "title": "Compliance Status",
        "type": "stat",
        "targets": [
          {
            "expr": "orm_calculator_cert_in_compliance",
            "legendFormat": "CERT-In Compliant"
          },
          {
            "expr": "orm_calculator_data_residency_enforced",
            "legendFormat": "Data Residency Enforced"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      }
    ],
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(up{job=\"orm-calculator\"}, instance)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "expr": "changes(orm_calculator_info[1h]) > 0",
          "titleFormat": "Deployment",
          "textFormat": "Version: {{version}}"
        }
      ]
    }
  }
}